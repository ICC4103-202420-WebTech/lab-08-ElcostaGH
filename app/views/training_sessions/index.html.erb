<h2>My Training Sessions</h2>

<%= link_to 'New Training Session', new_training_session_path, class: "btn btn-primary mb-3" %>

<% if @training_sessions.any? %>
  <ul class="list-group">
    <% @training_sessions.each do |session| %>
      <li class="list-group-item">
        <strong>Date:</strong> <%= session.date %><br>
        <strong>Activity:</strong> <%= session.activity %><br>
        <strong>Duration:</strong> <%= session.duration %> minutes<br>
        <strong>Description:</strong> <%= session.description %><br>
        
        <%= link_to 'View', training_session_path(session), class: "btn btn-info btn-sm mt-2" %>
        <%= link_to 'Edit', edit_training_session_path(session), class: "btn btn-secondary btn-sm mt-2" %>
              </li>
    <% end %>
  </ul>
<% else %>
  <p>No training sessions yet. <%= link_to 'Create one now', new_training_session_path %>!</p>
<% end %>