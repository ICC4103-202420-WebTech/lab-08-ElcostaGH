<div class="container mt-4">
  <h2>My Training Sessions</h2>

  <div class="mb-3">
    <%= link_to 'New Training Session', new_training_session_path, class: "btn btn-primary" %>
  </div>

  <% if @training_sessions.any? %>
    <ul class="list-group">
      <% @training_sessions.each do |session| %>
        <li class="list-group-item">
          <div>
            <strong>Date:</strong> <%= session.date %><br>
            <strong>Activity:</strong> <%= session.activity %><br>
            <strong>Duration:</strong> <%= session.duration %> minutes<br>
            <strong>Description:</strong> <%= session.description %><br>
          </div>
          <div class="mt-2">
            <%= link_to 'View', training_session_path(session), class: "btn btn-info btn-sm" %>
            <%= link_to 'Edit', edit_training_session_path(session), class: "btn btn-secondary btn-sm" %>
          </div>
        </li>
      <% end %>
    </ul>
  <% else %>
    <div class="alert alert-warning mt-3">
      No training sessions yet. <%= link_to 'Create one now', new_training_session_path, class: "alert-link" %>!
    </div>
  <% end %>
</div>