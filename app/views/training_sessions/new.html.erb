<div class="container">
  <h2 class="text-center">Create a New Training Session</h2>
  <%= form_with(model: @training_session, local: true) do |form| %>
    <div class="form-group">
      <%= form.label :date %>
      <%= form.date_select :date, class: 'form-control' %>
    </div>
    <div class="form-group">
      <%= form.label :activity %>
      <%= form.text_field :activity, class: 'form-control' %>
    </div>
    <div class="form-group">
      <%= form.label :duration %>
      <%= form.number_field :duration, class: 'form-control' %>
    </div>
    <div class="form-group">
      <%= form.label :description %>
      <%= form.text_area :description, class: 'form-control' %>
    </div>
    <div class="text-center">
      <%= form.submit 'Create Session', class: 'btn btn-custom' %>
    </div>
  <% end %>
</div>