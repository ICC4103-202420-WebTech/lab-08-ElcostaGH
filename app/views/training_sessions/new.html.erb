<h2>New Training Session</h2>

<%= form_with model: @training_session, local: true do |form| %>
  <div class="mb-3">
    <%= form.label :date, class: "form-label" %>
    <%= form.date_field :date, class: "form-control" %>
  </div>

  <div class="mb-3">
    <%= form.label :activity, class: "form-label" %>
    <%= form.text_field :activity, class: "form-control" %>
  </div>

  <div class="mb-3">
    <%= form.label :duration, class: "form-label" %>
    <%= form.number_field :duration, class: "form-control", min: 0 %>
  </div>

  <div class="mb-3">
    <%= form.label :description, class: "form-label" %>
    <%= form.text_area :description, class: "form-control" %>
  </div>

  <%= form.submit "Create Session", class: "btn btn-primary" %>
<% end %>

<%= link_to 'Back to Sessions', training_sessions_path, class: "btn btn-secondary mt-3" %>
