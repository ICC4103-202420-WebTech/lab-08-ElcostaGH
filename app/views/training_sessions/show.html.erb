<div class="container mt-4">
  <div class="card">
    <div class="card-body">
      <h2 class="card-title">Training Session Details</h2>

      <p>
        <strong>Date:</strong>
        <%= @training_session.date %>
      </p>

      <p>
        <strong>Activity:</strong>
        <%= @training_session.activity %>
      </p>

      <p>
        <strong>Duration:</strong>
        <%= @training_session.duration %> minutes
      </p>

      <p>
        <strong>Description:</strong>
        <%= @training_session.description %>
      </p>

      <div class="d-flex">
        <%= link_to 'Edit', edit_training_session_path(@training_session), class: "btn btn-secondary me-2" %>
        <%= button_to 'Delete', training_session_path(@training_session), method: :delete, data: { confirm: 'Are you sure you want to delete this session?' }, class: 'btn btn-danger me-2' %>
        <%= link_to 'Back to Sessions', training_sessions_path, class: "btn btn-primary" %>
      </div>
    </div>
  </div>
</div>