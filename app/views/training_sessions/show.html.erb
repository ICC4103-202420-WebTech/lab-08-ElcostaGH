<h2>Training Session Details</h2>

<p>
  <strong>Date:</strong>
  <%= @training_session.date %>
</p>

<p>
  <strong>Activity:</strong>
  <%= @training_session.activity %>
</p>

<p>
  <strong>Duration:</strong>
  <%= @training_session.duration %> minutes
</p>

<p>
  <strong>Description:</strong>
  <%= @training_session.description %>
</p>

<%= link_to 'Edit', edit_training_session_path(@training_session), class: "btn btn-secondary" %>
<%= button_to 'Delete', training_session_path(@training_session), method: :delete, data: { confirm: 'Are you sure you want to delete this session?' }, class: 'btn btn-danger' %>
<%= link_to 'Back to Sessions', training_sessions_path, class: "btn btn-primary mt-3" %>
